import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';

// Imatges dels documentals
import docImage1 from '../assets/documentalongs/femmes-resistance-franquisme-memoire-poster.webp';
import docImage2 from '../assets/documentalongs/femmes-resistance-franquisme-memoire-1.webp';
import docImage3 from '../assets/documentalongs/femmes-resistance-franquisme-memoire-2.webp';

// Imatges de l'equip
import lidiaImage from '../assets/team/lidia-martin-merino-directrice-documentaire.webp';
import africaImage from '../assets/team/africa-bayon-scenographe.webp';

const documentaries = [
  {
    title: "Femmes, résistance et franquisme: mémoire",
    mainImage: docImage1,
    gallery: [docImage2, docImage3],
    description: "Un documentaire sur la résistance des femmes pendant le franquisme...",
    year: "2023",
    duration: "52 min",
    director: {
      image: lidiaImage,
      name: "Lidia Martín Merino",
      role: "Directrice"
    },
    team: [
      {
        image: africaImage,
        name: "Africa Bayón",
        role: "Scénographe"
      }
    ]
  }
  // ... altres documentals
];

<Layout title="Documentalongs | Cinematic">
  <main class="py-16">
    {documentaries.map((doc) => (
      <article class="mb-24">
        <div class="container mx-auto px-4">
          <!-- Imatge principal -->
          <div class="relative mb-8">
            <Image 
              src={doc.mainImage}
              alt={doc.title}
              width={1920}
              height={1080}
              class="w-full h-[60vh] object-cover rounded-lg shadow-xl"
            />
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-8">
              <h1 class="text-4xl font-bold text-white">{doc.title}</h1>
              <p class="text-white/90 mt-2">{doc.year} · {doc.duration}</p>
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-12">
            <!-- Informació i descripció -->
            <div>
              <p class="text-lg text-gray-700 mb-8">{doc.description}</p>
              
              <!-- Director -->
              <div class="mb-8">
                <h2 class="text-2xl font-semibold mb-4">Direction</h2>
                <div class="flex items-center space-x-4">
                  <Image 
                    src={doc.director.image}
                    alt={doc.director.name}
                    width={80}
                    height={80}
                    class="rounded-full"
                  />
                  <div>
                    <p class="font-medium text-lg">{doc.director.name}</p>
                    <p class="text-gray-600">{doc.director.role}</p>
                  </div>
                </div>
              </div>

              <!-- Equip -->
              <div>
                <h2 class="text-2xl font-semibold mb-4">Équipe</h2>
                <div class="grid grid-cols-2 gap-4">
                  {doc.team.map((member) => (
                    <div class="flex items-center space-x-3">
                      <Image 
                        src={member.image}
                        alt={member.name}
                        width={60}
                        height={60}
                        class="rounded-full"
                      />
                      <div>
                        <p class="font-medium">{member.name}</p>
                        <p class="text-gray-600">{member.role}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <!-- Galeria d'imatges -->
            <div class="grid gap-4">
              {doc.gallery.map((image) => (
                <Image 
                  src={image}
                  alt={`Scene from ${doc.title}`}
                  width={800}
                  height={600}
                  class="w-full rounded-lg shadow-lg"
                />
              ))}
            </div>
          </div>
        </div>
      </article>
    ))}
  </main>
</Layout> 