---
import { Image } from 'astro:assets';
import lidiaImage from '../../assets/lidia-martin-merino-directrice-documentaire.webp';
import bastianImage from '../../assets/bastian-sinse-post-production.webp';
import juanImage from '../../assets/juan-manuel-rosas-cameraman.webp';

const teamMembers = [
  {
    image: lidiaImage,
    name: "Lidia Martín Merino",
    role: "Directrice et Réalisatrice",
    bio: "Architecte de mémoires documentaires, engagée dans la capture des voix silenciées.",
    socials: {
      x: "#",
      linkedin: "#"
    }
  },
  {
    image: bastianImage,
    name: "Bastian Sinsé",
    role: "Post-Production Audiovisuel, Monteur et Etalonneur",
    bio: "Experte en narrations de résistance, transformant chaque histoire en acte de résilience.",
    socials: {
      x: "#",
      linkedin: "#"
    }
  },
  {
    image: juanImage,
    name: "Juan Manuel Rosas",
    role: "Camera-man, Directeur Adjoint",
    bio: "Créateur visuel qui donne forme aux récits invisibles et marginalisés.",
    socials: {
      x: "#",
      linkedin: "#"
    }
  }
];
---

<section class="bg-gray-50 py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
        L'Équipe d'Installations
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        Les architectes des narratives documentaires qui défient le silence
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      {teamMembers.map(({ name, image, role, bio, socials }) => (
        <div class="bg-primary-400/10 shadow-lg rounded-lg overflow-hidden">
          {/* Usar el componente Image de astro:assets */}
          <Image
            src={image}
            alt={name}
            class="w-full h-64 object-cover object-center"
            width={400} // Ajusta el ancho según sea necesario
            height={256} // Ajusta la altura según sea necesario
            loading="lazy" // Carga diferida para mejorar el rendimiento
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900">{name}</h3>
            <p class="text-sm text-gray-500 mt-1">{role}</p>
            <p class="text-gray-600 mt-4">{bio}</p>
            <div class="mt-4 flex space-x-4">
              <a href={socials.x} class="text-gray-400 hover:text-black transition">X</a>
              <a href={socials.linkedin} class="text-gray-400 hover:text-blue-600 transition">LinkedIn</a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>