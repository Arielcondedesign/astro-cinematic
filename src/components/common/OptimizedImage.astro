---
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  class?: string;
  loading?: "eager" | "lazy";
  priority?: boolean;
}

const { 
  src, 
  alt, 
  width, 
  height, 
  class: className = "", 
  loading = "lazy",
  priority = false
} = Astro.props;

import { Image } from 'astro:assets';
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  fetchpriority={priority ? "high" : "auto"}
  decoding={priority ? "sync" : "async"}
/> 